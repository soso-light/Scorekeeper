<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme"
        parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScoreButtons"
        parent="AppTheme">
        <item name="android:background">
            @drawable/button_background
        </item>
        @color/colorPrimary
    </style>

    <style name="PlusButtons"
        parent="ScoreButtons">
        <item name="android:src">@drawable/ic_baseline_add_24</item>
        <item name="android:contentDescription">@string/plus_button_description</item>
    </style>

    <style name="MinusButtons"
        parent="ScoreButtons">
        <item name="android:src">@drawable/ic_baseline_remove_24</item>
        <item name="android:contentDescription">@string/minus_button_description</item>
    </style>

    <style name="ScoreText">
        <item name= "android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="TeamText">
        <item name=
            "android:textAppearance">@style/TextAppearance.AppCompat.Display1
        </item>
    </style>

</resources>